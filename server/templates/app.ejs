<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- SEO metadata -->
    <title><%= title %></title>
    <meta name="description" content="<%= description || 'mtrl is a lightweight, composable TypeScript/JavaScript component library inspired by Material Design principles.' %>">
    
    <!-- Canonical link for SEO - ensures search engines know the preferred URL -->
    <link rel="canonical" href="<%= canonicalUrl || ('https://mtrl.app' + (path === '/' ? '' : path)) %>">
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    
    <!-- Open Graph / Facebook metadata -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= canonicalUrl || ('https://mtrl.app' + (path === '/' ? '' : path)) %>">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description || 'mtrl is a lightweight, composable TypeScript/JavaScript component library inspired by Material Design principles.' %>">
    <meta property="og:image" content="<%= ogImage || 'https://mtrl.app/og-image.png' %>">
    
    <!-- Twitter Card metadata -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="<%= canonicalUrl || ('https://mtrl.app' + (path === '/' ? '' : path)) %>">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= description || 'mtrl is a lightweight, composable TypeScript/JavaScript component library inspired by Material Design principles.' %>">
    <meta name="twitter:image" content="<%= ogImage || 'https://mtrl.app/og-image.png' %>">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/dist/styles/main.css<%= timestamp || '' %>">
    
    <!-- Load critical fonts with font-display:swap to prevent render blocking -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Preload JavaScript modules for faster loading -->
    <link rel="modulepreload" href="/dist/app.js<%= timestamp || '' %>">
    
    <!-- Optional: Preload common chunks if you know their names -->
    <% if (typeof commonChunks !== 'undefined' && Array.isArray(commonChunks)) { %>
        <% commonChunks.forEach(function(chunk) { %>
            <link rel="modulepreload" href="<%= chunk %><%= timestamp || '' %>">
        <% }); %>
    <% } %>
    
    <!-- Structured data for improved search results (JSON-LD) -->
    <% if (typeof jsonLd !== 'undefined') { %>
        <script type="application/ld+json">
            <%- JSON.stringify(jsonLd) %>
        </script>
    <% } else { %>
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "WebSite",
                "name": "mtrl UI Framework",
                "url": "https://mtrl.app/",
                "description": "A lightweight, composable TypeScript/JavaScript component library inspired by Material Design principles",
                "potentialAction": {
                    "@type": "SearchAction",
                    "target": "https://mtrl.app/search?q={search_term_string}",
                    "query-input": "required name=search_term_string"
                }
            }
        </script>
    <% } %>
    
    <!-- Pre-rendered indicator for snapshots -->
    <% if (isSnapshot) { %>
        <meta name="snpsht:generated" content="<%= Date.now() %>">
    <% } %>
</head>
<body>
    <!-- Script needs to be type="module" for dynamic imports to work -->
    <script type="module" src="/dist/app.js<%= timestamp || '' %>"></script>
    
    <!-- Pre-rendered snapshot comment for debugging -->
    <% if (isSnapshot) { %>
    <!-- Static snapshot generated by snpsht at <%= new Date().toISOString() %> -->
    <% } %>
    
    <!-- Live reload script for development (automatically injected)
    <% if (typeof liveReloadScript !== 'undefined') { %>
        <%- liveReloadScript %>
    <% } %> -->
</body>
</html>