<!-- server/templates/app.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="mtrl lib playground">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %></title>
    <!-- Ensure Firefox compatibility with correct content types -->
    <link rel="stylesheet" href="/dist/styles/main.css" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Preload critical resources -->
    <link rel="preload" href="/dist/app.js" as="script">
    <!-- Add polyfill for older browsers and Firefox compatibility -->
    <script>
        // Simple polyfill for missing features
        if (!Element.prototype.closest) {
            Element.prototype.closest = function(s) {
                var el = this;
                do {
                    if (el.matches(s)) return el;
                    el = el.parentElement || el.parentNode;
                } while (el !== null && el.nodeType === 1);
                return null;
            };
        }
        
        // Set default error handlers
        window.addEventListener('error', function(event) {
            console.error('Global error:', event.error || event.message);
        });
    </script>
</head>
<body>
    <!-- Add loading indicator -->
    <div id="loading" style="position:fixed; top:0; left:0; right:0; bottom:0; display:flex; align-items:center; justify-content:center; background-color:#f5f5f5; z-index:1000;">
        <div style="text-align:center;">
            <div style="width:50px; height:50px; border:5px solid #ccc; border-top-color:#3498db; border-radius:50%; animation:spin 1s linear infinite;"></div>
            <p style="margin-top:15px; font-family:sans-serif;">Loading...</p>
        </div>
    </div>
    
    <script>
        // Hide loading indicator when app is ready
        window.addEventListener('DOMContentLoaded', function() {
            // Will be hidden by the app when ready
            setTimeout(function() {
                var loading = document.getElementById('loading');
                if (loading && loading.parentNode) {
                    loading.style.opacity = '0';
                    loading.style.transition = 'opacity 0.5s';
                    setTimeout(function() {
                        if (loading.parentNode) {
                            loading.parentNode.removeChild(loading);
                        }
                    }, 500);
                }
            }, 2000); // Fallback timeout
        });
    </script>
    
    <!-- Load app script with proper attributes -->
    <script type="module" src="/dist/app.js" defer></script>
    
    <noscript>
        <p style="text-align:center; padding:20px;">JavaScript is required to run this application.</p>
    </noscript>
</body>
</html>