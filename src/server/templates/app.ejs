<!-- src/server/templates/app.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="mtrl lib playground">
    <title><%= title %></title>
    <link rel="stylesheet" href="/dist/styles/main.css">
    <!-- Load critical fonts first with font-display:swap to prevent rendering blocking -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Preload the main bundle for faster loading -->
    <link rel="modulepreload" href="/dist/app.js">
    
    <!-- Optional: Preload common chunks if you know their names -->
    <% if (typeof commonChunks !== 'undefined' && Array.isArray(commonChunks)) { %>
        <% commonChunks.forEach(function(chunk) { %>
            <link rel="modulepreload" href="<%= chunk %>">
        <% }); %>
    <% } %>
</head>
<body>
    <!-- Script needs to be type="module" for dynamic imports to work -->
    <script type="module" src="/dist/app.js"></script>
</body>
</html>